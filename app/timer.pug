doctype html
html
  head
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1")

    // build:css styles/countdown.css
    link(rel='stylesheet', href='styles/countdown.css')
    // endbuild

    // build:js scripts/countdown.js
    script(src='scripts/countdown.js')
    // endbuild

  body
    span#timer
      span.countdown
      a.close(href='javascript:countdown.stop();')
       |X
    div.choose-timer
      a(href='javascript:countdown.start(5);')
       |5
      a(href='javascript:countdown.start(15);')
       |15
      a(href='javascript:countdown.start(50);')
       |50
